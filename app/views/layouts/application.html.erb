<!DOCTYPE html>
<html>
    <head>
      <title>Bookers2</title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

     <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
       <a class="navbar-brand" href="/"><span>Bookers</span></a>
       <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
       </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <% if user_signed_in? %>
           <ul class="navbar-nav ml-auto">
            <li>
              <%= link_to user_path(current_user), class:"btn btn-link" do %>
              <span class="fas fa-home nav-link text-light" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path, class:"btn btn-link" do %>
              <span class="fas fa-users nav-link text-light" aria-hidden="true"> Users</span>
              <% end %>
              </li>
            <li>
              <!--<a class="" href="/books"> Books</a>-->
              <%= link_to books_path, class:"btn btn-link" do %>
              <span class="fas fa-book-open nav-link text-light" aria-hidden="true"> Books</span>
              <% end %>
              </li>
            <li>
              <!--<a class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete" href="/users/sign_out"></a>-->
              <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
              <span class="fas fa-sign-out-alt nav-link text-light" aria-hidden="true"> logout</span>
              <% end %>
              </li>
          </ul>
        <% else %>
         <ul class="navbar-nav ml-auto">
            <li>
              <!--<a class="" href="/"> Home</a>-->
              <%= link_to root_path, class:"btn btn-link" do %>
              <span class="fas fa-home nav-link text-light" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <!--<a class="fas fa-link nav-link text-light" href="home/about"> About</a>-->
              <%= link_to home_about_path, class:"btn btn-link" do %>
              <span class="fas fa-link nav-link text-light" aria-hidden="true"> About</span>
              <% end %>
              </li>
            <li>
              <!--<a class="fas fa-user-plus nav-link text-light" href="/users/sign_up"> sign up</a>-->
              <%= link_to new_user_registration_path, class:"btn btn-link" do %>
              <span class="fas fa-user-plus nav-link text-light" aria-hidden="true"> sign up</span>
              <% end %>
              </li>
            <li>
            <!--<a class="fas fa-sign-in-alt nav-link text-light" href="/users/sign_in"> login</a>-->
            <%= link_to new_user_session_path, class:"btn btn-link" do %>
              <span class="fas fa-sign-in-alt nav-link text-light" aria-hidden="true"> login</span>
              <% end %>
              </li>
        <% end %>
      </div>
    </div>
      </nav>
    </header>
  <p class="notice"><%= notice %></p>
<%= yield %>
  <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</html>