<%#= flash[:notice] %>
<div class="container">
 <div class="row">
   <!--左側-->
   <div class="col-md-3">
       <%= render 'users/info', user: @user %>
       <%= render 'books/newbook', book: @book %>
    </div>
     <!--右側-->
     <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
     <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
        <tr>
            <td>
             <%#= link_to users_path(@user) do %>
             <%= link_to user_path(book.user) do %>
             <%= attachment_image_tag book.user, :profile_image_id, size: "50x50",fallback: "no_image.jpg"%>
             <% end %>
             </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>
       </tr>
       <% end %>
        </tbody>
     </table>
   </div>
 </div>
</div>