<!--別リンクでいいね順で表示しようとしたページ-->

<tbody>
         <% books.each do |book| %>
           <tr>
             <td>
               <%= link_to user_path(book.user) do %>
               <%= attachment_image_tag book.user, :profile_image_id, size: "50x50",fallback: "no_image.jpg"%>
               <% end %>
              </td>
             <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td id ="favorite_botton_<%= book.id %>">
                 <%= render partial: "favorites/favorites", locals: { book: book } %>
            </td>
            <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
          </tr>
          <% end %>
           </tbody>
        </table>
      </div>
    </div>
</div>