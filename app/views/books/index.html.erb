<div class="container">
    <div class="row">
      <!--左側-->
      <div class="col-md-3">
          <%= render 'users/info', user: @user %>
          <%= render 'books/newbook', book: @book %>
       </div>
      <!--usersの後にbookもつける-->
        <!--右側-->

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
        <thead>
         <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th></th>
           <th></th>
           <!--<th colspan="3"></th>-->
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
           <tr>
             <td>
               <%= link_to user_path(book.user) do %>
               <%= attachment_image_tag book.user, :profile_image_id, size: "50x50",fallback: "no_image.jpg"%>
               <% end %>
              </td>
             <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td id ="favorite_botton_<%= book.id %>">
                 <%= render partial: "favorites/favorites", locals: { book: book } %>
            </td>
            <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
          </tr>
          <% end %>
           </tbody>
        </table>
      </div>
    </div>
</div>